{
  "name": "11ty-solid-base",
  "version": "0.0.1",
  "description": "Nothing but a base HTML5 template and the esbuild setup to compile your Solid-js app alongside 11ty.",
  "main": "index.html",
  "scripts": {
    "dev:sass": "sass  --no-source-map --watch src/sass:./_tmp",
    "dev:eleventy": "ELEVENTY_ENV=dev npx @11ty/eleventy --serve",
    "build:sass": "sass  --no-source-map src/sass:./_tmp",
    "build:eleventy": "ELEVENTY_ENV=dev npx @11ty/eleventy --pathprefix=11ty-solid-base",
    "minify:eleventy": "ELEVENTY_ENV=prod npx @11ty/eleventy --pathprefix=11ty-solid-base",
    "postbuild": "lightningcss --help --targets '> 0.25%, not IE 11' ./_tmp/*.css -o docs/css/*.css",
    "postminify": "lightningcss --help --minify --targets '> 0.25%, not IE 11' ./_tmp/*.css -o docs/css/*.css",
    "start": "npm-run-all --parallel dev:*",
    "build": "NODE_ENV=dev npm-run-all build:sass build:eleventy",
    "minify": "NODE_ENV=production npm-run-all build:sass minify:eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/woodcock3/11ty-solid-start.git"
  },
  "author": "woodcock3",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-canary.16",
    "esbuild": "^0.15.10",
    "esbuild-plugin-solid": "^0.4.2",
    "glob-all": "^3.3.0",
    "lightningcss-cli": "^1.16.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.55.0",
    "solid-js": "^1.5.7"
  },
  "browserslist": [
    "> 0.25%",
    "not IE 11"
  ]
}
